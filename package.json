{
    "name": "timezeropw-client",
    "description": "TimeZeroPW client",
    "author": "ravoit",
    "license": "MIT",
    "version": "1.0.15",
    "main": "./main.js",
    "scripts": {
        "run": "electron .",
        "publish": "electron-builder build -p always"
    },
    "build": {
        "appId": "pw.timezero",
        "productName": "TimeZeroPW",
        "extraFiles": "game/**/*",
        "files": "!lib/",
        "win": {
            "extraResources": "lib/pepflashplayer32.dll",
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "ia32"
                    ]
                }
            ]
        },
        "compression": "maximum"
    },
    "devDependencies": {
        "electron": "latest",
        "electron-builder": "latest"
    },
    "dependencies": {
        "custom-electron-titlebar": "^3.1.0",
        "electron-store": "latest",
        "electron-updater": "^4.0.0",
        "finalhandler": "latest",
        "serve-static": "latest"
    }
}
